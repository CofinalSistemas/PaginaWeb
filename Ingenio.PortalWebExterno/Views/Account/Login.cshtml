        var email = $("#email1").val(),
        email2 = $("#email2").val();
        if (email != email2) {
            $("#alertcorreos").show();
            error = true;
        } else {
            $("#alertcorreos").hide();
            error = false;
        }
    });

    $("#registro").on("submit", function () {
        event.preventDefault();

        if (error) {
            return false;
        }
        //enviar formulario
        var fd = new FormData(this);

        //swal({
