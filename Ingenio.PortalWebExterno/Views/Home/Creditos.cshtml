<section class="page__Credito">

    @{
        // En la primera parte se pone el nombre de la imagen y en el segundo el link

        var Creditos = new Dictionary<string, string>
        {
            {"EDUCATIVO.png", "#creditoEducativo" },
            {"VIVIENDA.png", "#creditoVivienda" },
            {"CARTERA.png", "#creditoCartera" },
            {"LIBRANZA.png", "#creditoLibranza" },
            {"CONSUMO.png", "#creditoConsumo" },
            {"MICROCRE.png", "#microcredito" },
            {"ROTATIVO.png", "#rotativos" },
            {"cofinagro.png", "#cofinagro" },
        };

        foreach (var credito in Creditos)
        {
            <a class="tipo_4" href="/Home/ProductosCreditos/@credito.Value">
                <img class="imagen_credito" src="~/img/Img_Web2/creditos/@credito.Key" alt="Imagen de @credito.Key">
            </a>
        }

        @functions {
            public string GetHello()
            {
                return "Hello";
            }
        }


    }
        @*<div>From method: @GetHello() dos</div>*@

</section>

