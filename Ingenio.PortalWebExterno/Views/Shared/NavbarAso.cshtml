                            <li>
                                @Html.ActionLink("Creditos", "Edit", "SimuladorCre")
                            </li>
                        </ul>
                    </li>
                    <!--Extractos de cuenta-->
                    <li id="extractos" class="dropdown">
                        <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown"><span class="underline">Extracto de Cuenta</span><b class="caret"></b></a>
                        <ul class="dropdown-menu" style="right: 0px; left: 0px;">
                            <li>
                                <a href="~/CExtractos/Details">Extracto CREDITO</a>
                            </li>
                            <li>
                                <a href="~/AhExtractos/Details/1">Extracto AHORRO</a>
                            </li>

                        </ul>
                    </li>
                    <!--Movimientos-->
                    @if (!cuentaUsuario.IsNull())
                    {
                        <li id="consultaM">
                            <a href="@Url.Action("Details", "Asociado")" style="display:none"><span class="underline">Movimiento cuenta</span></a>
                            @*    @Html.ActionLink("Consulta Movimientos", "Details", "Asociado", new { @id = cuentaUsuario.Identificacion })*@
                        </li>
                    }
                    <!--Formas de pago-->
                    <li id="formasPago" class="dropdown">
                        <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown"><span class="underline">Reporte de Pagos<br /> Otras entidades</span><b class="caret"></b></a>
                        <ul class="dropdown-menu" style="right: 0px; left: 0px;">
                            <li>
                                <a href="~/Formapago/Index">Reporte Pago</a>
                            </li>

                        </ul>
                    </li>
                    <!--Certificado dian-->
                    <li id="certificado" class="dropdown">
                        <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown"><span class="underline">Certificado DIAN</span><b class="caret"></b></a>
                        <ul class="dropdown-menu" style="right: 0px; left: 0px;">
                            <li>
                                <a href="~/Dian/Index">Reporte Tributario</a>
                            </li>
                        </ul>
                    </li>
                    <!--Reportes-->
                    <!--Estado-->
                    <li id="estados" class="dropdown">
                        <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown"><span class="underline">Cuenta</span><b class="caret"></b></a>
                        <ul class="dropdown-menu" style="right: 0px;">
                            @if (!cuentaUsuario.IsNull())
                            {
                                <li>

                                    <a href="@Url.Action("details","estadodecuenta", new { id=cuentaUsuario.Identificacion })">Estado de cuenta</a>
                                </li>
                                <li>

                                    @if (cuentaUsuario.Id_Cargo != 2)
                                    {<a href="@Url.Action("edit", "asociado", new { id = cuentaUsuario.Identificacion })">Datos personales</a>}
                                </li>
                                @*<li>
