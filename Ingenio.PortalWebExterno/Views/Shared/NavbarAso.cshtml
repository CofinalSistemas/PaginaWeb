}
<script src="https://kit.fontawesome.com/f9533edd0d.js" crossorigin="anonymous"></script>

<header>

    <!-- *** TOP ***
    _________________________________________________________ -->
    <div id="top">
        <div class="container">
            <div class="row">
                <div class="col-xs-9">
                    <div class="login pull-left">
                        <div class="social">
                            <a href="https://www.facebook.com/profile.php?id=100011123886270"
                               class="external facebook girar" data-animate-hover="pulse"><i class="fa fa-facebook"></i></a>
                            @*<a href="https://www.google.com.co/search?source=hp&q=cofinal&oq=cofinal&gs_l=psy-ab.3..35i39k1j0l3.1169.2424.0.2686.8.7.0.0.0.0.238.858.0j1j3.4.0....0...1.1.64.psy-ab..4.4.855.0..0i67k1.tiRMSmsmbP8"
                                class="external gplus girar" data-animate-hover="pulse"><i class="fa fa-google-plus"></i></a>*@
                            <a href="https://twitter.com/cofinal?lang=es"
                               class="external twitter girar" @*data-animate-hover="pulse"*@><i class="fa fa-twitter"></i></a>
                            <a href="~/Home/Contact" class="email girar" @*data-animate-hover="pulse"*@><i class="fa fa-envelope"></i></a>
                            <a href="https://www.instagram.com/cofinaloficial/"
                               class="external instagram girar"><i class="fa-brands fa-instagram"></i></a>
                            <a href="https://www.youtube.com/channel/UC8I7nZ77BH5qK3rXvQZre2w/featured"
                               class="external youtube girar"><i class="fa-brands fa-youtube"></i></a>
                        </div>
                        <a href="@Url.Action("logout","account")">
                            <i class="fa fa-sign-in"></i>
                            <span class="hidden-xs text-uppercase">Cerrar Sesión</span>
                        </a>
                    </div>
                </div>
                <div class="col-xs-3">
                    <div class="login">

                        @if (!cuentaUsuario.IsNull())
                        {
                            @cuentaUsuario.UserName
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- *** TOP END *** -->
    <!-- *** NAVBAR ***
    _________________________________________________________ -->
    @*<div class="navbar-affixed-top" data-spy="affix" data-offset-top="200">*@

