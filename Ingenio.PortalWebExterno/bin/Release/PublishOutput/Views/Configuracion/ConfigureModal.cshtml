@model Ingenio.PortalWebExterno.Controllers.Configuracion.ModalConfigurationModel

@{
    Layout = null;
}

@*@using (Html.BeginForm())
    {*@


@using ( Html.BeginForm("Configure","Configuracion",FormMethod.Post,new { id = "theForm" }) )
{

<div class="form-horizontal">
    <h4>ModalConfigurationModel</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.IsActive,htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive,"",new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ShowAgainAfterClosed,htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.ShowAgainAfterClosed)
                @Html.ValidationMessageFor(model => model.ShowAgainAfterClosed,"",new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Message,htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Message,new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message,"",new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="updateButton" type="submit" value="Actualizar" class="btn btn-info" />
        </div>
        @*<div class="col-md-offset-2 col-md-10">
            <input id="showButton" type="button" value="Show" class="btn btn-primary" onclick="Show()" />
        </div>*@
    </div>

</div>
}


<script>
    $().ready(function () {
        //alert("ready");
        $("#theForm").submit(function (event) {
            event.preventDefault();
            var theForm = $(this);
            $.post('/Configuracion/Configure', theForm.serialize())
                .done(function (result) {
                    alert(result);
                })
        });
