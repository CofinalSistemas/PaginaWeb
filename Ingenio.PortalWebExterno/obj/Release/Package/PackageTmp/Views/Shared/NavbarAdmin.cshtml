@using Ingenio.Models

@{

    AccountModels cuentaUsuario = new AccountModels();
}
<style>
    .text-uppercase {
    }
</style>
<header>
    <!-- *** TOP ***
    _________________________________________________________ -->
    <div id="top">
        <div class="container">
            <div class="row">
                <div class="col-xs-8">
                    <div class="login pull-left">
                        <div class="social">
                            <a href="#" class="external facebook" data-animate-hover="pulse"><i class="fa fa-facebook"></i></a>
                            <a href="#" class="external gplus" data-animate-hover="pulse"><i class="fa fa-google-plus"></i></a>
                            <a href="#" class="external twitter" data-animate-hover="pulse"><i class="fa fa-twitter"></i></a>
                            <a href="~/Home/Contact" class="email" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
                        </div>

                        @if ( !cuentaUsuario.IsNull() )
                        {
                            <a href="@Url.Action("logout", "account")">
                                <i class="fa fa-sign-in"></i>
                                <span class="hidden-xs text-uppercase">Cerrar Sesión</span>
                            </a>
                        }
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="login pull-right">

                        @if ( !cuentaUsuario.IsNull() )
                        {
                            <span> @cuentaUsuario.UserName</span>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in"></i> <span class="hidden-xs text-uppercase">Iniciar sesión</span></a>
                            <a href="@Url.Action("Login", "Account")"><i class="fa fa-user"></i> <span class="hidden-xs text-uppercase">Registrarse</span></a>
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- *** TOP END *** -->
